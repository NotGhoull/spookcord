{
	"name": "@spookcord/ui",
	"version": "0.0.1",
	"scripts": {
		"build": "vite build && bun run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "bun run test:unit -- --run",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"test:browser": "vitest --workspace=vitest.workspace.ts"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0",
		"@lucide/svelte": "^0.482.0"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.0.0-0",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@storybook/addon-a11y": "^9.0.0",
		"@storybook/addon-docs": "^9.0.0",
		"@storybook/addon-svelte-csf": "^5.0.2",
		"@storybook/addon-vitest": "^9.0.0",
		"@storybook/sveltekit": "^9.0.0",
		"@storybook/test-runner": "^0.22.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@types/node": "^22",
		"@vitest/browser": "^3.1.4",
		"@vitest/coverage-v8": "^3.1.4",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-storybook": "^9.0.0",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"playwright": "^1.52.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"storybook": "^9.0.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"vitest": "^3.1.4",
		"vitest-browser-svelte": "^0.1.0",
		"webdriverio": "^9.15.0"
	},
	"keywords": [
		"svelte"
	],
	"dependencies": {
		"@sveltejs/kit": "^2.16.0",
		"publint": "^0.3.2",
		"@sveltejs/package": "^2.0.0",
		"@lucide/svelte": "^0.511.0",
		"bits-ui": "^2.2.0",
		"tailwind-merge": "^3.3.0",
		"tailwind-variants": "^1.0.0"
	}
}
